
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String  
  posts Post[]
}

model Post {
  id     Int     @id @default(autoincrement())
  title  String
  content String?
  author User    @relation(fields: [authorId], references: [id])
  authorId Int
}
