import db from '../../lib/db';

export default async function handler(req, res) {
  const { id } = req.query;

  try {
    const query = 'SELECT nombre, descripcion, imagen, precio FROM Platos WHERE id = $1';
    const values = [id];
    const result = await db.query(query, values);

    if (result.rows.length === 0) {
      res.status(404).json({ error: 'Plato not found' });
      return;
    }

    const { nombre, descripcion, imagen, precio } = result.rows[0];

    res.setHeader('Content-Type', 'application/json');
    res.status(200).json({ nombre, descripcion, imagen: imagen.toString('base64'), precio });
  } catch (err) {
    console.error(err);
    res.status(500).json({ error: 'Internal Server Error' });
  }
}
